<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingRight="25dp"
    android:paddingLeft="25dp"
    android:paddingBottom="25dp"
    android:background="@color/colorCardBg"
    >

    <TextView
        android:id="@+id/tv_store_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Redeem Points"
        android:fontFamily="@font/oswald"
        android:textSize="18dp"
        android:textColor="@color/colorWhiteHeading"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Available points "
            android:layout_marginTop="5dp"
            android:fontFamily="@font/oswald"
            android:textColor="@color/colorOrange"
            />

        <TextView
            android:id="@+id/tv_redeem_bp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/oswald"
            android:textColor="@color/colorWhiteSub"
            android:layout_marginTop="5dp"
            />
    </LinearLayout>

    <EditText
        android:id="@+id/etRedeemPoints"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:inputType="number"
        android:drawableLeft="@drawable/ic_baseline_credit_card_24"
        android:drawablePadding="8dp"
        android:background="@drawable/custom_et"
        android:textColor="@color/colorWhiteSub"
        android:textColorHint="@color/colorWhiteSub"
        android:fontFamily="@font/oswald"
        android:hint="enter points to redeem"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Conversion "
            android:fontFamily="@font/oswald"
            android:textColor="@color/colorOrange"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RS."
            android:fontFamily="@font/oswald"
            android:textColor="@color/colorWhiteSub"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/tv_redeem_pointConvertedtv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/oswald"
            android:textColor="@color/colorWhiteSub"
            android:textStyle="bold"
            android:text=" 0"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text=" /-"
            android:fontFamily="@font/oswald"
            android:textColor="@color/colorWhiteSub"
            />

    </LinearLayout>

    <EditText
        android:id="@+id/et_redeem_CardNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/ic_baseline_credit_card_24"
        android:drawablePadding="8dp"
        android:background="@drawable/custom_et"
        android:textColor="@color/colorWhiteSub"
        android:textColorHint="@color/colorWhiteSub"
        android:fontFamily="@font/oswald"
        android:hint="enter your card number"
        />


    <EditText
        android:id="@+id/et_redeem_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/ic_baseline_my_location_24"
        android:drawablePadding="8dp"
        android:background="@drawable/custom_et"
        android:textColor="@color/colorWhiteSub"
        android:textColorHint="@color/colorWhiteSub"
        android:fontFamily="@font/oswald"
        android:hint="your current location"
        />

        <Button
            android:id="@+id/btn_redeem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Redeem"
            android:background="@drawable/custom_rounded_btn"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"
            android:fontFamily="@font/oswald"
            android:textAllCaps="false"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/img_ep_profile_Image"
            />

</LinearLayout>