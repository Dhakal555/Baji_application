        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_profile_Image"
            android:layout_width="130dp"
            android:layout_height="150dp"
            android:elevation="10dp"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/profile_picture" />

        <TextView
            android:id="@+id/tv_profile_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_profile_Image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/roboto"
            android:text="wackyjacky101"
            android:textStyle="bold"
            android:textColor="#000000" />

        <ImageView
            android:id="@+id/img_edit_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:tint="#303F9F"
            android:elevation="5dp"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/ic_edit_black_24dp"
            android:layout_below="@id/img_profile_Image"
            android:layout_toRightOf="@+id/tv_profile_username"
            />

        <TextView
            android:id="@+id/tv_profile_game_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="500 BP"
            android:fontFamily="@font/roboto"
            android:layout_marginTop="5dp"
            android:layout_below="@id/tv_profile_username"
            android:layout_centerHorizontal="true"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_profile_game_points"
            android:orientation="vertical"
            android:layout_marginTop="-30dp"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/profilewavybanner"/>

