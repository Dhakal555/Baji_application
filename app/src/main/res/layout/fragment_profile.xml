<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.Profile"
    android:background="#ffffff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="30dp">

        <ImageView
            android:id="@+id/img_profile_logout"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:paddingRight="8dp"
            android:clickable="true"
            android:elevation="10dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/logout"
            />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_profile_Image"
            android:layout_width="125dp"
            android:layout_height="140dp"
            android:elevation="10dp"
            android:layout_marginTop="5dp"
            android:layout_below="@id/img_profile_logout"
            android:layout_centerHorizontal="true"
            android:src="@drawable/profile_picture" />

        <TextView
            android:id="@+id/tv_profile_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_profile_Image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/roboto"
            android:text="wackyjacky101"
            android:textColor="#000000" />

        <ImageView
            android:id="@+id/img_edit_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:tint="#303F9F"
            android:elevation="5dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/ic_edit_black_24dp"
            android:layout_below="@id/img_profile_Image"
            android:layout_toRightOf="@+id/tv_profile_username"
            />

        <TextView
            android:id="@+id/tv_profile_game_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="500 BP"
            android:fontFamily="@font/roboto"
            android:layout_marginTop="1dp"
            android:layout_below="@id/tv_profile_username"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>
</FrameLayout>