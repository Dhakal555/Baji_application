<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.Profile"
    android:background="#ffffff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="30dp">

        <ImageView
            android:id="@+id/img_profile_logout"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:paddingRight="8dp"
            android:clickable="true"
            android:elevation="10dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/logout"
            />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_profile_Image"
            android:layout_width="125dp"
            android:layout_height="140dp"
            android:elevation="10dp"
            android:layout_marginTop="5dp"
            android:layout_below="@id/img_profile_logout"
            android:layout_centerHorizontal="true"
            android:src="@drawable/profile_picture" />

        <TextView
            android:id="@+id/tv_profile_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_profile_Image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/roboto"
            android:text="wackyjacky101"
            android:textColor="#000000" />

        <ImageView
            android:id="@+id/img_edit_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:tint="#303F9F"
            android:elevation="5dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/ic_edit_black_24dp"
            android:layout_below="@id/img_profile_Image"
            android:layout_toRightOf="@+id/tv_profile_username"
            />

        <TextView
            android:id="@+id/tv_profile_game_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="500 BP"
            android:fontFamily="@font/roboto"
            android:layout_marginTop="5dp"
            android:layout_below="@id/tv_profile_username"
            android:layout_centerHorizontal="true"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_profile_game_points"
            android:orientation="vertical"
            android:layout_marginTop="60dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Activitys"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textColor="@color/colorText"/>

            <TextView
                android:id="@+id/tv_pro_Your_Challenge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:text="Your Challenges"
                android:textColor="@color/colorBlack"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_pro_Your_Accepted_Challenge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:textColor="@color/colorBlack"
                android:text="Accepted Challenges"
                />

<!--            <TextView-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:textSize="18sp"-->
<!--                android:layout_gravity="center"-->
<!--                android:layout_marginTop="15dp"-->
<!--                android:textColor="@color/colorBlack"-->
<!--                android:text="Your Challenges"/>-->

            <TextView
                android:id="@+id/tv_profile_redeem_cash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:textColor="@color/colorBlack"
                android:text="Redeem Cash"/>

        </LinearLayout>

    </RelativeLayout>

</FrameLayout>