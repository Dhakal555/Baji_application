<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_columnWeight="1"
    android:layout_rowWeight="1"
    app:cardElevation="5dp"
    android:layout_margin="12dp"
    app:cardCornerRadius="12dp"
    android:alignmentMode="alignMargins"
    android:columnOrderPreserved="false"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorCardBg"
        android:paddingBottom="10dp">

        <ImageView
            android:id="@+id/img_result_game_res_image"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:src="@drawable/fortnite" />

        <TextView
            android:id="@+id/tv_resverify_currentusr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Opponent requested for the verification"
            android:fontFamily="@font/oswald"
            android:textAlignment="center"
            android:textColor="@color/white"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ll_resverify_chcontainer"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/ll_chname"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Challenger "
                        android:fontFamily="@font/oswald"
                        android:textSize="16sp"
                        android:textColor="@color/colorOrange" />

                    <TextView
                        android:id="@+id/tv_result_challengerName"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/oswald"
                        android:textColor="@color/colorWhiteSub"
                        android:textSize="16sp"
                        android:text="name"
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_resverify_chgame"
                    android:layout_below="@+id/ll_chname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Game "
                        android:fontFamily="@font/oswald"
                        android:textSize="16sp"
                        android:textColor="@color/colorOrange"/>

                    <TextView
                        android:id="@+id/tv_result_GameName"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/oswald"
                        android:textColor="@color/colorWhiteSub"
                        android:textSize="16sp"
                        android:text="name"
                     />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_resverify_chBp"
                    android:layout_below="@+id/ll_chgame"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="BP "
                        android:fontFamily="@font/oswald"
                        android:textSize="16sp"
                        android:textColor="@color/colorOrange"/>

                    <TextView
                        android:id="@+id/tv_result_BP"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/oswald"
                        android:textColor="@color/colorWhiteSub"
                        android:textSize="16sp"
                        android:text="name"
                        />

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_alignParentEnd="true"
                android:orientation="horizontal"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/btn_result_Challenge_detail"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/next64"
                    android:clickable="true"
                    android:fontFamily="@font/roboto"
                    android:elevation="10dp"
                    android:layout_gravity="end"
                    />

                <ImageView
                    android:id="@+id/btn_report_result"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:src="@drawable/error"
                    android:layout_marginLeft="10dp"
                    android:elevation="5dp"
                    android:clickable="true"
                    android:layout_gravity="end"/>

                <ImageView
                    android:id="@+id/btn_verify_res"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:src="@drawable/tick"
                    android:layout_marginLeft="10dp"
                    android:elevation="5dp"
                    android:clickable="true"
                    android:layout_gravity="end"/>

            </LinearLayout>


        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
