<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/colorCardBg"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verify Victory"
        android:fontFamily="@font/oswald"
        android:textSize="16dp"
        android:textColor="@color/colorWhiteHeading"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="pinch to zoom the image"
        android:fontFamily="@font/oswald"
        android:textColor="@color/colorWhiteSub"/>

    <TextView
        android:id="@+id/verificationsenduser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:visibility="gone"
        android:fontFamily="@font/oswald"
        android:textColor="@color/colorWhiteSub"/>

    <TextView
        android:id="@+id/verifyusrBp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:visibility="gone"
        android:fontFamily="@font/oswald"
        android:textColor="@color/colorWhiteSub"/>

    <com.davemorrissey.labs.subscaleview.SubsamplingScaleImageView
        android:id="@+id/img_resverify_image"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_marginVertical="10dp"
        app:src="@drawable/gamescore"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/oswald"
            android:textColor="@color/colorOrange"
            android:text="Note "/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resubmit score using REPORT icon"
            android:fontFamily="@font/oswald"
            android:textColor="@color/colorWhiteSub"
            />

    </LinearLayout>

    <Button
        android:id="@+id/btn_resverify_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_rounded_btn"
        android:text="Confirm"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/oswald"
        android:textColor="@color/white"
        android:textAllCaps="false"/>

</LinearLayout>