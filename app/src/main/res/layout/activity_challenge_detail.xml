<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ChallengeDetail"
    android:orientation="vertical"
    android:background="@drawable/detailgradient"
    >

    <TextView
        android:id="@+id/tv_details_chID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:visibility="gone"
        android:textColor="@color/colorBlack" />

    <TextView
        android:id="@+id/tv_details_challengerID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:visibility="gone"
        android:textColor="@color/colorBlack" />

    <TextView
        android:id="@+id/tv_Bnav_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:visibility="gone"
        android:textColor="@color/colorBlack" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/img_details_ch_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/fortnite" />

        <TextView
            android:id="@+id/tv_details_chGame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginTop="35dp"
            android:text="Fortnight"
            android:fontFamily="@font/oswald"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textColor="@color/colorOrange" />

        <TextView
            android:id="@+id/tv_details_chDesc"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:textColor="@color/colorWhiteSub"
            android:fontFamily="@font/oswald"
            android:text="I am challenging for team death match for the highest kills in best of 3 round."
            android:textAlignment="center"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="35dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="15dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="70dp"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/tv_details_challengerinfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Challenger"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/oswald"
                    android:textColor="@color/colorOrange" />

                <TextView
                    android:id="@+id/tv_details_challenger"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/oswald"
                    android:textSize="16sp"
                    android:text="Wackyjacky101"
                    android:textColor="@color/colorWhiteSub" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="17dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Type"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/oswald"
                    android:textColor="@color/colorOrange" />

                <TextView
                    android:id="@+id/tv_details_chType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/oswald"
                    android:textSize="16sp"
                    android:text="Wackyjacky101"
                    android:textColor="@color/colorWhiteSub" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="17dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Challenge Date"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/oswald"
                    android:textColor="@color/colorOrange" />

                <TextView
                    android:id="@+id/tv_details_Date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/oswald"
                    android:textSize="16sp"
                    android:text="Wackyjacky101"
                    android:textColor="@color/colorWhiteSub" />

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="15dp"
            android:layout_gravity="center_horizontal"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Challenge BP"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/oswald"
                    android:textColor="@color/colorOrange"/>

                <TextView
                    android:id="@+id/tv_details_chBP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:fontFamily="@font/oswald"
                    android:text=""
                    android:textColor="@color/colorWhiteSub" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="17dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Challenge Time"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/oswald"
                    android:textColor="@color/colorOrange" />

                <TextView
                    android:id="@+id/tv_details_chTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:fontFamily="@font/oswald"
                    android:text="Wackyjacky101"
                    android:textColor="@color/colorWhiteSub" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="17dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Win Points"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/oswald"
                    android:textColor="@color/colorOrange" />

                <TextView
                    android:id="@+id/tv_detail_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:fontFamily="@font/oswald"
                    android:text="20"
                    android:textColor="@color/colorWhiteSub" />

            </LinearLayout>

        </LinearLayout>>

    </LinearLayout>

    <Button
        android:id="@+id/btn_details_acceptChallenge"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:text="Accept"
        android:elevation="20dp"
        android:textStyle="bold"
        android:fontFamily="@font/oswald"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:textAllCaps="false"
        android:background="@drawable/custom_rounded_btn"
        android:textColor="#ffffff"/>

    <TextView
        android:id="@+id/tv_details_challengeStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="status"
        android:visibility="invisible"
        android:textColor="#fff"/>


</LinearLayout>