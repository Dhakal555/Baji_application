<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBg"
    tools:context=".activities.Login"
    android:padding="25dp">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="240dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:src="@drawable/icon2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-9dp"
            android:fontFamily="@font/oswald"
            android:text="Let's play"
            android:textColor="@color/colorWhiteHeading"
            android:textSize="30sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <EditText
            android:id="@+id/et_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="110dp"
            android:drawableLeft="@drawable/ic_baseline_person_profile_24"
            android:background="@drawable/custom_et"
            android:drawablePadding="8dp"
            android:fontFamily="@font/oswald"
            android:textColor="@color/colorWhiteSub"
            android:textColorHint="@color/colorWhiteSub"
            android:hint="Username"
            android:inputType="textPersonName"
             />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:drawableLeft="@drawable/ic_baseline_lock_24"
            android:background="@drawable/custom_et"
            android:drawablePadding="8dp"
            android:fontFamily="@font/oswald"
            android:textColor="@color/colorWhiteSub"
            android:textColorHint="@color/colorWhiteSub"
            android:hint="password"
            android:inputType="textPassword"
            />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/custom_rounded_btn"
            android:elevation="10dp"
            android:fontFamily="@font/oswald"
            android:paddingHorizontal="40dp"
            android:text="Login"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_goToSignup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:textSize="15sp"
            android:clickable="true"
            android:fontFamily="@font/oswald"
            android:text="Sign-up here"
            android:textColor="@color/colorWhiteSub" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>